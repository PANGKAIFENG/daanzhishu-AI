.placeholder-container {
  padding: 20rpx 0;
}

.answer-card {
  margin: 20rpx 30rpx 30rpx 30rpx;
  background-color: #2D2D3F;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.answer-text {
  font-size: 40rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  display: block;
}

.loading-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(156, 39, 176, 0.3);
  border-top-color: #9C27B0;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.placeholder-card {
  margin: 30rpx 30rpx;
  background-color: #2D2D3F;
  border-radius: 16rpx;
  overflow: hidden;
}

.placeholder-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.placeholder-circle {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: rgba(156, 39, 176, 0.5);
  animation: pulse 1.5s infinite ease-in-out;
}

.placeholder-title {
  height: 32rpx;
  width: 160rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  animation: pulse 1.5s infinite ease-in-out;
}

.placeholder-content {
  padding: 0 30rpx 30rpx 70rpx;
}

.placeholder-line {
  height: 20rpx;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  margin-bottom: 16rpx;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.3;
  }
} 