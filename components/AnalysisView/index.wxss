/* 解析卡片样式 */
.analysis-content {
  padding: 20rpx 0;
}

.analysis-card {
  margin: 30rpx 30rpx;
  background-color: #2D2D3F;
  border-radius: 16rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.icon-circle {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.purple {
  background-color: #9C27B0;
}

.header-text {
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
}

.toggle-icon {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.card-content {
  padding: 0 30rpx 30rpx 70rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
} 