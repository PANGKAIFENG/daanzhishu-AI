/* 全局样式 */
page {
  background-color: #1E1E2E;
}

.analysis-container {
  background-color: #1E1E2E;
  min-height: 100vh;
  color: #FFFFFF;
}

/* 自定义导航栏样式 */
.custom-nav {
  width: 100%;
  background-color: #1E1E2E;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.status-bar {
  height: 44px; /* 适配不同设备的状态栏高度 */
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.nav-back {
  height: 32px;
  width: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 20px;
  color: white;
}

.nav-title {
  font-size: 17px;
  font-weight: 500;
  color: white;
}

.nav-placeholder {
  width: 32px;
}

/* 答案卡片样式 */
.answer-card {
  margin: 108px 30rpx 30rpx 30rpx;
  background-color: #2D2D3F;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.answer-text {
  font-size: 40rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  display: block;
}

.default-tip {
  text-align: center;
  margin: 10rpx 0 20rpx;
  padding: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.answer-text {
  font-size: 34rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.source-tag {
  display: flex;
  justify-content: flex-end;
}

.ai-tag, .local-tag, .default-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.ai-tag {
  background: #e6f7ff;
  color: #1890ff;
}

.local-tag {
  background: #f6ffed;
  color: #52c41a;
}

.default-tag {
  background: #fff7e6;
  color: #fa8c16;
}

.content {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.section-content.collapsed {
  height: 0;
  overflow: hidden;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  transition: all 0.3s ease;
}

.loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.footer {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.share-btn, .back-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.share-btn {
  background: #07c160;
  color: #fff;
}

.back-btn {
  background: #f8f8f8;
  color: #666;
  border: 2rpx solid #ddd;
} 