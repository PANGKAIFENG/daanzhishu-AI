/* 全局样式 */
page {
  background-color: #1E1E2E;
}

.analysis-container {
  background-color: #1E1E2E;
  min-height: 100vh;
  color: #FFFFFF;
}

/* 自定义导航栏样式 */
.custom-nav {
  width: 100%;
  background-color: #1E1E2E;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.status-bar {
  height: 44px; /* 适配不同设备的状态栏高度 */
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.nav-back {
  height: 32px;
  width: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 20px;
  color: white;
}

.nav-title {
  font-size: 17px;
  font-weight: 500;
  color: white;
}

.nav-placeholder {
  width: 32px;
}

/* 答案卡片样式 */
.answer-card {
  margin: 108px 30rpx 30rpx 30rpx;
  background-color: #2D2D3F;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.answer-text {
  font-size: 40rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  display: block;
}

.default-tip {
  text-align: center;
  margin: 10rpx 0 20rpx;
  padding: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
} 