/* about.wxss */
.container {
  justify-content: center;
  padding: 40rpx;
}

.about-card {
  width: 90%;
  margin-bottom: 40rpx;
}

.about-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: var(--primary-color);
}

.about-content {
  width: 100%;
}

.about-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.section-content {
  font-size: 28rpx;
  color: var(--light-text);
  line-height: 1.6;
}

.stat-item {
  margin-bottom: 10rpx;
}

.version {
  color: var(--light-text);
  font-size: 24rpx;
  text-align: center;
}

.back-btn {
  margin-top: 40rpx;
} 