.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.control-panel {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.test-btn, .clear-btn {
  width: 45%;
}

.test-btn {
  background-color: #07c160;
  color: white;
}

.clear-btn {
  background-color: #f8f8f8;
  color: #666;
}

.results-container {
  padding: 0 10rpx;
}

.result-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.result-header {
  margin-bottom: 10rpx;
}

.timestamp {
  font-size: 24rpx;
  color: #999;
}

.answer-text {
  font-size: 30rpx;
  color: #333;
  margin: 10rpx 0;
  padding: 10rpx;
  background: #f8f8f8;
  border-radius: 6rpx;
}

.analysis-content {
  margin-top: 10rpx;
}

.analysis-data {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-top: 10rpx;
} 